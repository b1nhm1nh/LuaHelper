{
    "name": "luahelper",
    "displayName": "Lua",
    "description": "LuaHelper, Intellisense, Linting, Debugging, Code formatting, High-performance, and more.",
    "version": "0.2.29",
    "publisher": "yinfei",
    "author": {
        "name": "yinfei",
        "email": "313745207@qq.com"
    },
    "license": "BSD-3-Clause",
    "keywords": [
        "lua",
        "lua helper",
        "luahelper",
        "lua help",
        "luahelp",
        "lua debug",
        "luadebug",
        "lua check",
        "luacheck",
        "lua format",
        "luaformat",
        "emmylua"
    ],
    "icon": "images/luahelper.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Tencent/LuaHelper.git"
    },
    "bugs": {
        "url": "https://github.com/Tencent/LuaHelper.git"
    },
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Linters",
        "Debuggers",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:lua",
        "onWebviewPanel:luahelper-doc",
        "onCommand:extension.luahelper.doc"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "LuaHelper.copyDebugFile",
                "title": "LuaHelper: Copy debug file"
            },
            {
                "command": "LuaHelper.copyLuaSocket",
                "title": "LuaHelper: Copy Lua Socket Lib"
            },
            {
                "command": "LuaHelper.insertDebugCode",
                "title": "LuaHelper: Insert Debugger Code"
            },
            {
                "command": "LuaHelper.openDebugFolder",
                "title": "LuaHelper: Open Debug Folder"
            },
            {
                "command": "LuaHelper.setFormatConfig",
                "title": "LuaHelper: Set Format Config"
            }
        ],
        "snippets": [
            {
                "language": "lua",
                "path": "./snippets/snippets.json"
            }
        ],
        "languages": [
            {
                "id": "lua",
                "extensions": [
                    ".lua"
                ],
                "aliases": [
                    "Lua"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lua",
                "scopeName": "source.lua",
                "path": "./syntaxes/lua.json"
            }
        ],
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "debuggers": [
            {
                "type": "LuaHelper-Debug",
                "label": "LuaHelper: Debug",
                "program": "./out/debug/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to executable file which launched with debugger(not a lua file), default \"\". ",
                                "default": ""
                            },
                            "args": {
                                "type": "array",
                                "description": "Program execution parameters, the structure is an array of strings. ",
                                "default": []
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "After the debugger connect, it automatically stops at the first line of code called. ",
                                "default": true
                            },
                            "cwd": {
                                "type": "string",
                                "description": "exactltPathMode : splicing path | autoPathMode : workspace path.",
                                "default": "${workspaceFolder}"
                            },
                            "isNeedB64EncodeStr": {
                                "type": "boolean",
                                "description": "Whether use base64 encoding for transmit strings. default true. ",
                                "default": true
                            },
                            "luaFileExtension": {
                                "type": "string",
                                "description": "Lua file suffix. \n",
                                "default": ""
                            },
                            "pathCaseSensitivity": {
                                "type": "boolean",
                                "description": "File path is case sensitive, default true. ",
                                "default": true
                            },
                            "connectionPort": {
                                "type": "number",
                                "description": "The port number of the connection. Default is 8818. ",
                                "default": 8818
                            },
                            "autoReconnect": {
                                "type": "boolean",
                                "description": "When disconnected by the lua end, VSCode automatically waits for new reconnection. ",
                                "default": true
                            },
                            "rootFolder": {
                                "type": "string",
                                "description": "Record the directory opened by vscode, you can use it to find launch.json",
                                "default": "${workspaceFolder}"
                            },
                            "TempFilePath": {
                                "type": "string",
                                "description": "Temporary file storage path generated during debugging, please ensure this folder exists.",
                                "default": "${workspaceFolder}"
                            },
                            "logLevel": {
                                "type": "number",
                                "description": "Log level. 0: All information(for developer); 1: Only necessary information (default); 2: Only error.",
                                "default": 1
                            },
                            "useCHook": {
                                "type": "boolean",
                                "description": "Use C Hook module to improve efficiency. The default is true. If set false debug with lua hook. ",
                                "default": true
                            },
                            "packagePath": {
                                "type": "array",
                                "description": "Path added to package.path at runtime, such as /Script/?.lua. ",
                                "default": []
                            },
                            "luaPath": {
                                "type": "string",
                                "description": "Lua command path and file name such as C:/lua5.3/lua.exe.",
                                "default": ""
                            },
                            "docPathReplace": {
                                "type": "array",
                                "description": "When the path of the file being debugged and the file loaded in VSCode are inconsistent, use this setting to complete the path replacement. The input format is [\"replaced path\", \"new path\"].",
                                "default": []
                            },
                            "autoPathMode": {
                                "type": "boolean",
                                "description": "Whether to use automatic path mode.",
                                "default": true
                            },
                            "updateTips": {
                                "type": "boolean",
                                "description": "Whether open LuaPanda automatic upgrade prompt.",
                                "default": true
                            },
                            "tag": {
                                "type": "string",
                                "description": "Mark run mode, don't modify it. There are three modes: normal, attach, independent_file. ",
                                "default": "normal"
                            },
                            "VSCodeAsClient": {
                                "type": "boolean",
                                "description": "Usually adapter as Server, lua process as Client. this mode is invert these. Please also set connectionIP。",
                                "default": false
                            },
                            "connectionIP": {
                                "type": "string",
                                "description": "If adapter is client , the IP to connect. Default is '127.0.0.1'。",
                                "default": "127.0.0.1"
                            },
                            "dbCheckBreakpoint": {
                                "type": "boolean",
                                "description": "Whether double check breakpoint hit",
                                "default": true
                            },
                            "distinguishSameNameFile": {
                                "type": "boolean",
                                "description": "Whether distinguish breakpoint in files with same name",
                                "default": false
                            },
                            "truncatedOPath": {
                                "type": "string",
                                "description": " ",
                                "default": ""
                            },
                            "DevelopmentMode": {
                                "type": "boolean",
                                "description": "Whether enter development mode",
                                "default": false
                            },
                            "description": {
                                "type": "string",
                                "description": "Description of the current mode",
                                "default": ""
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "LuaHelper-Debug",
                        "request": "launch",
                        "name": "LuaHelper-Attach",
                        "description": "Universal mode. Please select this mode for normal debugging projects.",
                        "cwd": "${workspaceFolder}",
                        "luaFileExtension": "",
                        "connectionPort": 8818,
                        "stopOnEntry": true,
                        "useCHook": true,
                        "autoPathMode": true
                    },
                    {
                        "type": "LuaHelper-Debug",
                        "request": "launch",
                        "name": "LuaHelper-DebugFile",
                        "description": "Standalone file debugging mode",
                        "luaPath": "",
                        "packagePath": [],
                        "luaFileExtension": "",
                        "connectionPort": 8818,
                        "stopOnEntry": true,
                        "useCHook": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "LuaHelper: Attach",
                        "description": "LuaHelper debug attach by socket",
                        "body": {
                            "type": "LuaHelper-Debug",
                            "request": "launch",
                            "name": "LuaHelper-Attach",
                            "description": "Universal mode. Please select this mode for normal debugging projects.",
                            "cwd": "^\"${workspaceFolder}\"",
                            "luaFileExtension": "",
                            "connectionPort": 8818,
                            "stopOnEntry": true,
                            "useCHook": true,
                            "autoPathMode": true
                        }
                    },
                    {
                        "label": "LuaHelper: Debug File",
                        "description": "LuaHelper debug only file",
                        "body": {
                            "type": "LuaHelper-Debug",
                            "request": "launch",
                            "name": "LuaHelper-DebugFile",
                            "description": "Standalone file debugging mode",
                            "luaPath": "",
                            "packagePath": [],
                            "luaFileExtension": "",
                            "connectionPort": 8818,
                            "stopOnEntry": true,
                            "useCHook": true
                        }
                    }
                ]
            }
        ],
        "configuration": {
            "title": "Lua Helper",
            "properties": {
