                "luahelper.base.report": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "%luahelper.base.enableReport%"
                },
                "luahelper.base.lsp": {
                    "type": "string",
                    "default": "cmd rpc",
                    "enum": [
                        "cmd rpc",
                        "socket rpc"
