                    "type": "integer",
                    "markdownDescription": "%luahelper.format.column_limit%"
                },
                "luahelper.format.indent_width": {
                    "default": 4,
                    "scope": "resource",
                    "type": "integer",
                    "markdownDescription": "%luahelper.format.indent_width%"
                },
                "luahelper.format.use_tab": {
                    "default": false,
